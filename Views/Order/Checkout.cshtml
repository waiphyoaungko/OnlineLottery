@{
    Layout = "~/Views/Shared/_CartLayout.cshtml";
    var message = TempData["notice"] ?? string.Empty;
}
@model Order
<script type="text/javascript" charset="utf-8">
        var message = '@message'
        if (message)
            alert(message);
</script>
<div class="shopping-cart section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <section class="login border-top-1">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5 col-md-8 align-item-center">
                                <div class="border border">
                                    <h3 class="bg-gray p-4">အော်ဒါမှာယူရန် ဖြည့်သွင်းပါ</h3>
                                    <form asp-action="Checkout" method="Post" role="form">
                                        <fieldset class="p-4">
                                            <input asp-for="Name" class="border p-3 w-100 my-2" placeholder="အမည်" />
                                            <span asp-validation-for="Name" class="danger"></span>
                                            <input asp-for="PhoneNumber" class="border p-3 w-100 my-2" placeholder="ဖုန်းနံပါတ်" />
                                            <span asp-validation-for="PhoneNumber" class="danger"></span>
                                            <input type="submit" class="d-block py-3 px-4 bg-primary text-white border-0 rounded font-weight-bold" value="Complete Order" />
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
