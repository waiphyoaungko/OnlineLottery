@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = TempData["notice"] ?? string.Empty;
}

@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging
@model PagingList<Ticket>
@*@model TicketListViewModel*@
    <script type="text/javascript" charset="utf-8">
        var message = '@message'
        if (message)
            alert(message);
    </script>
<div class="col-lg-9 col-md-8">
    @if (Model.Count == 0)
    {
        <span>မိတ်ဆွေရှာဖွေနေသော ထီလက်မှတ်မတွေ့ရှိပါ။</span>
    }
    else
    {

        @foreach (var ticket in Model)
        {
            <partial name="_TicketCategory" model="ticket" />
        }

        <!-- pagination -->
        <div class="pagination">
            <nav aria-label="Ticket navigation example">
                <vc:pager paging-list="@Model"></vc:pager>
            </nav>
        </div>
    }
    <!-- pagination -->
</div>
